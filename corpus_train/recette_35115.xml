<recette id="35115">
  <titre>Salade de betteraves rouges à l'orange</titre>
  <type>Entrée</type>
  <niveau>Très facile</niveau>
  <cout>Bon marché</cout>
  <ingredients>
    <p>2 betteraves</p>
    <p>1 oignon doux en fines rondelles</p>
    <p>2 oranges en jus (+ eau de fleur d'oranger si on veut) </p>
    <p>2 oranges coupées en dés</p>
    <p>3 cuillerées à soupe d'huile d'olive</p>
    <p>1 bouquet de menthe fraîche coupée</p>
    <p>2 pincées de cannelle</p>
    <p>sel, poivre</p>
  </ingredients>
  <preparation>
  <![CDATA[
    Mélanger le tout et servir !
  ]]>
  </preparation>
</recette>
