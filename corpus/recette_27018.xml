<?xml version="1.0" encoding="utf-8"?>
<recette id="27018">
  <titre>Salade fraîche de melon allemande</titre>
  <type>Entrée</type>
  <niveau>Très facile</niveau>
  <cout>Bon marché</cout>
  <ingredients>
    <p>1 concombre coupé en petits dés</p>
    <p>1 melon en petites boules</p>
    <p>1 poire coupée en dés</p>
    <p>1/2 yaourt nature</p>
    <p>3 cornichons coupés en petits morceaux</p>
    <p>3 rondelles de cervelas coupé en petits morceaux</p>
    <p>1 yaourt fruits de la passion-pêche</p>
    <p>huile d'olive</p>
    <p>1 jus de citron</p>
    <p>sel, poivre</p>
  </ingredients>
  <preparation>
  <![CDATA[
    Mélanger le tout et servir très frais
  ]]>
  </preparation>
</recette>
