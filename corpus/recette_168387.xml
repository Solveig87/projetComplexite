<?xml version="1.0" encoding="utf-8"?>
<recette id="168387">
  <titre>Gâteau à l'orange en 3 étapes</titre>
  <type>Dessert</type>
  <niveau>Très facile</niveau>
  <cout>Bon marché</cout>
  <ingredients>
    <p>250 g de sucre</p>
    <p>1 orange entière (coupée en morceaux)</p>
    <p>3 oeufs</p>
    <p>100 g de beurre</p>
    <p>1 yaourt nature</p>
    <p>250 g de farine</p>
    <p>1 sachet de levure</p>
    <p>1 pincée de sel</p>
  </ingredients>
  <preparation>
  <![CDATA[
    1. Mettre tous les ingrédients dans un saladier et mélanger.
     2. Mettre le mélange dans un plat à cake.
     3. Faire cuire pendant 30 minutes au four à 180°
  ]]>
  </preparation>
</recette>
